{
	"version" : 1,
	"controls": {
		"pisound-micro": {
			"ctrl": {
				"pins" : [ "B05", "pull_up", "B06", "pull_up" ],
				"type": "encoder",
				"mode": "clamp"
			},
			"volume_enc": {
				"type" : "encoder",
				"pins" : [ "B03", "pull_up", "B04", "pull_up" ],
				"input_low" : 0,
				"input_high" : 24
			},
			"volume_pot": {
				"type": "gpio_input",
				"pin": [ "B23", "pull_up" ]
			},
			"led": {
				"type": "activity_led",
				"activity": "midi_in",
				"pin": "B08"
			}
		},
		"alsa": {
			"hw:micro": [
				"Digital Playback Volume",
				[ "Digital Capture Volume", { "alias": "rec_vol" } ]
			]
		},
		"midi": {
			"mano portas": {
				"belekas": {
					"comment": "note_on, note_off, control_change, program_change, pitch_bend, aftertouch, poly_aftertouch, song_position, song_select, tune_request, clock, start, continue, stop, active_sensing, reset",
					"type": "control_change",
					"channel": 1,
					"id": 3
				}
			}
		}
	},
	"mappings" : [
		[ "Digital Playback Volume", "->", "volume_enc", { "index": -1 } ],
		[ "Digital Playback Volume", "<->", "belekas" ]
	]
}
